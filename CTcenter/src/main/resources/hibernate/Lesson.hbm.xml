<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.Dimcooo.model.Lesson" table="lesson" schema="training_center">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="theme">
            <column name="theme" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="duration">
            <column name="duration" sql-type="time(5)"/>
        </property>
        <many-to-one name="subjectBySubjectId" class="com.Dimcooo.model.Subject">
            <column name="Subject_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>