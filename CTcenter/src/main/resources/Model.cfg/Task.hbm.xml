<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.Dimcooo.model.Task" table="task" schema="ct_center">
        <id name="taskId">
            <column name="task_id" sql-type="int(11)"/>
        </id>
        <property name="theme">
            <column name="theme" sql-type="varchar(500)" length="500" not-null="true"/>
        </property>
        <property name="content">
            <column name="content" sql-type="varchar(200)" length="200" not-null="true"/>
        </property>
        <property name="lessonLessonId">
            <column name="lesson_lesson_id" sql-type="int(11)"/>
        </property>
        <many-to-one name="lessonByLessonLessonId" insert="false" update="false" cascade="save-update" class="com.Dimcooo.model.Lesson">
            <column name="lesson_lesson_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>